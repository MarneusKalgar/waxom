header.navbar.navbar-default.navbar-fixed-top.header
	.container
		.row
			.navbar-header
				a.navbar-brand.logo(href="/") Waxom
					img.logo__img(src="img/logo/logo.png", alt="logo")
				button.navbar-toggle.collapsed.menu-btn(type="button", data-toggle="collapse", data-target="#navbar" aria-expanded="false")
					span.menu-btn__barholder

			.collapse.navbar-collapse.col-md-8.col-md-offset-1#navbar
				nav
					ul.nav.navbar-nav.main-nav
